apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: gitops
  namespace: openshift-gitops
spec:
  destination:
    namespace: openshift-operators
    server: 'https://kubernetes.default.svc'
  project: default
  source:
    path: {{ gitops_scm_path }}
    repoURL: {{ gitops_scm_repo }}
    targetRevision: HEAD
  syncPolicy:
    automated: {}

